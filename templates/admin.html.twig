<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<!-- Axentix CSS minified version -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.0.0/dist/css/axentix.min.css"> {% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
	</head>
	<body class="layout with-sidenav">
		<header>
			<nav class="navbar shadow-1 primary">
				<a href="{{ path('app_home')}}" class="navbar-brand">4coins</a>
				<div class="navbar-menu ml-auto">
					{# <a class="navbar-link" href="{{ path('users_annonces_ajout') }}" >Ajouter une annonce</a> #}
					<a class="navbar-link" href="{{ path('app_login') }}">Login</a>
					<a class="navbar-link" href="{{ path('app_logout') }}">Déconnecter</a>
					
				</div>
			</nav>
		</header>

		<div id="example-sidenav" data-ax="sidenav" class="sidenav shadow-1 large fixed white">
			<div class="sidenav-header">
				<button data-target="example-sidenav" class="sidenav-trigger">
					<i class="fas fa-times"></i>
				</button>
				<img class="sidenav-logo dropshadow-1" src="your_img_path" alt="Logo"/>
			</div>
			<a href="{{ path('users_home') }}" class="sidenav-link active">Mon profile</a>
			<a href="{{ path('admin_home') }}" class="sidenav-link active">Gérer les annonces</a>
			
		</div>

		<main>
			<button data-target="example-sidenav"
        	class="btn rounded-1 press amaranth dark-1 sidenav-trigger hide-md-up">Open sidenav
      	</button>
			{% block body %}{% endblock %}
		</main>

		<footer class="footer primary">
			Copyright © 2020 

		<!-- Axentix JS minified version -->
		<script src="https://cdn.jsdelivr.net/npm/axentix@1.0.0/dist/js/axentix.min.js"></script>
		{% block javascripts %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/axentix@1.1.0/dist/js/axentix.min.js"></script>
		<script src="{{ asset('JS/script.js') }}"></script>
	</body>
</html>
