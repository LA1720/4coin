{% extends 'users.html.twig' %}

{% block title %}Modification du profile de
	{{ app.user.firstname }}!
{% endblock %}

{% block body %}
	<div class="grix xs4 container">
	 {% for message in app.flashes('error') %}
        <div class="p-3 my-2 rounded-2 error"">{{ message }}</div>
    {% endfor %}
		<div class="col-xs4">
			<h1>
				Modification du mot de passe de
				{{ app.user.name }}
				{{ app.user.firstname }}
			</h1>
				<form method="post">
					<div class="form-field">
						<label for="pass">Mot de passe</label>
						<input type="password" id="pass" name="pass" class="form-control" placeholder="password"/>
					</div>
					<div class="form-field">
						<label for="pass2">Confirmer le mot de passe</label>
						<input type="password" id="pass2" name="pass2" class="form-control" placeholder="password"/>
					</div>
					<button class="btn blue">Valider</button>
				</form>
		</div>
	</div>
{% endblock %}
