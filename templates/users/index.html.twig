{% extends 'users.html.twig' %}

{% block title %}Hello
	{{ app.user.firstname }}!
{% endblock %}

{% block body %}
	<div class="grix xs4 container">

	{% for message in app.flashes('message') %}
		<div class="col-xs4">
			<div class="p-3 my-2 rounded-2 success">{{ message }}</div>
		</div>
	{% endfor %}

		<div class="col-xs4">
			<h1>
				Profile de
				{{ app.user.name }}
				{{ app.user.firstname }}
				<h1></div>
				<div class="col-xs1">Nom :</div>
				<div class="col-xs3">{{ app.user.name }}</div>
				<div class="col-xs1">Pr√©nom :</div>
				<div class="col-xs3">{{ app.user.firstname }}</div>
				<div class="col-xs1">Email :</div>
				<div class="col-xs3">{{ app.user.email }}</div>
				<div class="col-xs4">
					<a href="{{ path('users_profile_modifier') }}" class="btn blue">Modifier le profil</a>
					<a href="{{ path('users_pass_modifier') }}" class="btn blue">Modifier le mot de pass</a>
				</div>

				<div class="col-xs4">
					<h3>
						Annonce de
						{{ app.user.name }}
						{{ app.user.firstname }} ({{ app.user.annonces|length }})
						<h3>
						</div>
						{% for annonce in app.user.annonces %}
							<div class="col-xs1">Titre :</div>
							<div class="col-xs3">{{ annonce.title }}</div>
					<div class="col-xs1">Description :</div>
					<div class="col-xs3">{{ annonce.content }}</div>
				{% endfor %}
			</div>
		{% endblock %}
